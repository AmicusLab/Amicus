# LLM API Keys (최소 하나 필요)
ANTHROPIC_API_KEY=sk-ant-api03-...
OPENAI_API_KEY=sk-...
GOOGLE_API_KEY=...
GROQ_API_KEY=gsk_...
ZAI_API_KEY=...
ZAI_CODING_PLAN_API_KEY=...
MOONSHOT_API_KEY=sk-...

# Budget Settings
LLM_BUDGET_DAILY=10.00
LLM_BUDGET_ALERT_THRESHOLD=0.8

# Default Model
LLM_DEFAULT_MODEL=anthropic:claude-3-5-sonnet-20241022

# MCP Server Settings
GITHUB_TOKEN=ghp_...
MCP_CONFIG_PATH=./data/mcp-servers.json

# API Authentication (optional - if not set, auth is disabled for development)
AMICUS_API_KEY=your-secret-api-key-here

# Secrets persistence (required if you want runtime key updates to persist)
# Used to encrypt `data/secrets.enc.json` at rest.
CONFIG_ENCRYPTION_KEY=change-me-strong-passphrase

# Admin session signing secret (optional; falls back to CONFIG_ENCRYPTION_KEY)
AMICUS_ADMIN_SESSION_SECRET=change-me-strong-secret

# Admin login password (optional; enables POST /admin/login)
AMICUS_ADMIN_PASSWORD=change-me

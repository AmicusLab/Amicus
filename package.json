{
  "name": "amicus",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "typecheck": "tsc -b",
    "build": "tsc -b",
    "test": "bun test",
    "test:interface": "bun test apps/daemon/__tests__/ apps/cli/__tests__/",
    "test:e2e": "cd apps/dashboard && bun run test:e2e",
    "test:all": "bun run test && bun run test:interface",
    "verify": "bun run typecheck && bun run build && bun run test:all",
    "report": "bash scripts/task-report.sh",
    "demo": "bun run scripts/demo.ts"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "concurrently": "^9.2.1",
    "typescript": "^5.5.4"
  }
}
